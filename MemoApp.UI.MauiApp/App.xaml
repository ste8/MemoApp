<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MemoApp.UI.MauiApp"
             xmlns:converters="clr-namespace:MemoApp.UI.MauiApp.Converters"
             x:Class="MemoApp.UI.MauiApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Global Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:DivisionConverter x:Key="DivisionConverter" />
            <converters:ResponseTimeToColorConverter x:Key="ResponseTimeToColorConverter" />
            <converters:BoolToDropdownArrowConverter x:Key="BoolToDropdownArrowConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
