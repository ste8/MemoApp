<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MemoApp.UI.MauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MemoApp.UI.MauiApp.Views"
    xmlns:viewmodels="clr-namespace:MemoApp.UI.MauiApp.ViewModels"
    xmlns:localization="clr-namespace:MemoApp.Localization.Extensions;assembly=MemoApp.Localization"
    Title="Major System Training">

    <TabBar>
        <ShellContent
            Title="{localization:Localize Tab_Training}"
            Icon="training"
            Route="main"
            ContentTemplate="{DataTemplate views:MainPage}" />

        <ShellContent
            Title="{localization:Localize Tab_Help}"
            Icon="help"
            Route="help"
            ContentTemplate="{DataTemplate views:HelpPage}" />

        <ShellContent
            Title="{localization:Localize Tab_Settings}"
            Icon="settings"
            Route="settings"
            ContentTemplate="{DataTemplate views:SettingsPage}" />

        <ShellContent
            Title="{localization:Localize Tab_NumberMemory}"
            Icon="memory"
            Route="numbermemorization"
            ContentTemplate="{DataTemplate views:NumberMemorizationPage}" />
    </TabBar>

</Shell>
