<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MemoApp.UI.MauiApp.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MemoApp.UI.MauiApp.ViewModels"
             xmlns:localization="clr-namespace:MemoApp.Localization.Extensions;assembly=MemoApp.Localization"
             Title="{localization:Localize Settings_Title}">
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- Page Title -->
            <Label Text="{localization:Localize Settings_Title}"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <!-- General Settings Section -->
            <Frame BackgroundColor="LightGray"
                   CornerRadius="10"
                   HasShadow="True"
                   Padding="15">
                
                <StackLayout Spacing="15">
                    
                    <!-- Section Title -->
                    <Label Text="{localization:Localize Settings_General}"
                           FontSize="18"
                           FontAttributes="Bold" />
                    
                    <!-- Language Selection -->
                    <StackLayout Spacing="10">
                        <Label Text="{localization:Localize Language_Title}"
                               FontSize="16"
                               FontAttributes="Bold" />
                        
                        <Button Text="{Binding CurrentLanguageName, TargetNullValue={localization:Localize Language_SelectPrompt}}"
                                Command="{Binding SelectLanguageCommand}"
                                BackgroundColor="White"
                                TextColor="Black"
                                BorderColor="Gray"
                                BorderWidth="1"
                                CornerRadius="8"
                                FontSize="14"
                                Padding="15,12"
                                HeightRequest="{OnIdiom Phone=48, Tablet=52, Desktop=56}"
                                HorizontalOptions="FillAndExpand"
                                AutomationProperties.Name="{localization:Localize Accessibility_LanguageButton}"
                                AutomationProperties.HelpText="{localization:Localize Accessibility_LanguageButtonHelp}" />
                        
                        <Label Text="{localization:Localize Language_Description}"
                               FontSize="12"
                               TextColor="Gray"
                               LineBreakMode="WordWrap" />
                    </StackLayout>
                    
                    <!-- Number Format Selection -->
                    <StackLayout Spacing="10">
                        <Label Text="{localization:Localize NumberFormat_Title}"
                               FontSize="16"
                               FontAttributes="Bold" />
                        
                        <Button Text="{Binding CurrentNumberFormatName, TargetNullValue={localization:Localize NumberFormat_SelectPrompt}}"
                                Command="{Binding SelectNumberFormatCommand}"
                                BackgroundColor="White"
                                TextColor="Black"
                                BorderColor="Gray"
                                BorderWidth="1"
                                CornerRadius="8"
                                FontSize="14"
                                Padding="15,12"
                                HeightRequest="{OnIdiom Phone=48, Tablet=52, Desktop=56}"
                                HorizontalOptions="FillAndExpand" />
                        
                        <Label Text="{localization:Localize NumberFormat_Description}"
                               FontSize="12"
                               TextColor="Gray"
                               LineBreakMode="WordWrap" />
                    </StackLayout>
                    
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>