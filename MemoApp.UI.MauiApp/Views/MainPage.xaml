<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MemoApp.UI.MauiApp.ViewModels"
             xmlns:localization="clr-namespace:MemoApp.Localization.Extensions;assembly=MemoApp.Localization"
             x:Class="MemoApp.UI.MauiApp.Views.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <!-- 
        Main responsive grid layout:
        - Single column on mobile (phones)
        - Two columns on tablets and desktop
        - Uses star sizing (*) for flexible column widths
        -->
        <Grid x:Name="MainGrid" 
              Padding="{OnPlatform iOS='20,40,20,20', Default='20'}">
            
            <!-- Define responsive column definitions -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Second column only visible on larger screens -->
                <ColumnDefinition Width="{OnIdiom Phone=0, Tablet='*', Desktop='*'}" />
            </Grid.ColumnDefinitions>

            <!-- Left Column: Main content -->
            <StackLayout Grid.Column="0" 
                         Spacing="{OnIdiom Phone=20, Tablet=25, Desktop=30}">
                
                <!-- App Header -->
                <Label Text="{localization:Localize MainPage_Title}" 
                       Style="{StaticResource Headline}"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />
                
                <Label Text="{localization:Localize MainPage_Subtitle}" 
                       Style="{StaticResource SubHeadline}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,20" />

                <!-- Quick Start Buttons -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                       Padding="15"
                       CornerRadius="10"
                       HasShadow="True">
                    
                    <StackLayout Spacing="15">
                        <Label Text="{localization:Localize MainPage_QuickStart}" 
                               Style="{StaticResource SubHeadline}"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        
                        <Button Text="{Binding QuickTrainingButtonText}"
                                Command="{Binding StartQuickTrainingCommand}"
                                BackgroundColor="White"
                                TextColor="{StaticResource Primary}"
                                CornerRadius="8"
                                HeightRequest="{OnIdiom Phone=50, Tablet=55, Desktop=60}"
                                AutomationProperties.Name="{localization:Localize Accessibility_BeginTrainingButton}"
                                AutomationProperties.HelpText="{localization:Localize Accessibility_BeginTrainingButtonHelp}" />
                        
                        <Button Text="{localization:Localize MainPage_MajorSystemGuide}"
                                Command="{Binding ShowHelpCommand}"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="2"
                                CornerRadius="8"
                                HeightRequest="{OnIdiom Phone=48, Tablet=52, Desktop=56}"
                                LineBreakMode="WordWrap"
                                Padding="10,8"
                                AutomationProperties.Name="{localization:Localize Accessibility_HelpButton}"
                                AutomationProperties.HelpText="{localization:Localize Accessibility_HelpButtonHelp}" />
                    </StackLayout>
                </Frame>

                <!-- Custom Range Section -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                       Padding="15"
                       CornerRadius="10"
                       HasShadow="True">
                    
                    <StackLayout Spacing="15">
                        <Label Text="{localization:Localize MainPage_CustomRange}" 
                               Style="{StaticResource SubHeadline}"
                               HorizontalOptions="Center" />
                        
                        <!-- Responsive input layout: Stack on phone, horizontal on tablet/desktop -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{OnIdiom Phone='*', Tablet='*', Desktop='*'}" />
                                <ColumnDefinition Width="{OnIdiom Phone='0', Tablet='Auto', Desktop='Auto'}" />
                                <ColumnDefinition Width="{OnIdiom Phone='*', Tablet='*', Desktop='*'}" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{OnIdiom Phone='Auto', Tablet='0', Desktop='0'}" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Start Number Selector -->
                            <ContentView Grid.Column="0" Grid.Row="0">
                                <ContentView.Content>
                                    <!-- Use Picker on mobile platforms -->
                                    <Picker x:Name="StartPicker"
                                            ItemsSource="{Binding NumberOptions}"
                                            SelectedIndex="{Binding SelectedStartIndex}"
                                            Title="{localization:Localize MainPage_StartNumber}"
                                            HorizontalOptions="FillAndExpand"
                                            IsVisible="{OnPlatform Android=True, iOS=True, Default=False}"
                                            AutomationProperties.Name="{localization:Localize Accessibility_StartNumberPicker}"
                                            AutomationProperties.HelpText="{localization:Localize Accessibility_StartNumberPickerHelp}" />
                                </ContentView.Content>
                            </ContentView>
                            
                            <!-- Desktop alternative for Start Number -->
                            <StackLayout Grid.Column="0" Grid.Row="0" 
                                         IsVisible="{OnPlatform WinUI=True, MacCatalyst=True, Default=False}"
                                         HorizontalOptions="FillAndExpand">
                                <Label Text="{localization:Localize MainPage_StartNumber}"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSubtle}, Dark={StaticResource Gray400}}"
                                       Margin="0,0,0,5" />
                                <Grid>
                                    <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                                            StrokeThickness="1"
                                            HeightRequest="{OnIdiom Phone=48, Tablet=52, Desktop=56}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="4" />
                                        </Border.StrokeShape>
                                        <Grid>
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding ToggleStartDropdownCommand}" />
                                            </Grid.GestureRecognizers>
                                            <Label Text="{Binding CustomRangeStart}"
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Start"
                                                   Margin="10,0,0,0" />
                                            <Label Text="{Binding IsStartDropdownVisible, Converter={StaticResource BoolToDropdownArrowConverter}}"
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light={StaticResource TextSubtle}, Dark={StaticResource Gray400}}"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="End"
                                                   Margin="0,0,10,0" />
                                        </Grid>
                                    </Border>
                                </Grid>
                                <!-- Dropdown for Start Number -->
                                <Frame IsVisible="{Binding IsStartDropdownVisible}"
                                       BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}"
                                       BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                                       CornerRadius="8"
                                       Padding="0"
                                       HasShadow="True"
                                       ZIndex="1000"
                                       MaximumHeightRequest="200">
                                    <CollectionView ItemsSource="{Binding NumberOptions}"
                                                    BackgroundColor="Transparent"
                                                    SelectionMode="None"
                                                    MaximumHeightRequest="180">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="x:String">
                                                <Border BackgroundColor="Transparent"
                                                        Padding="0">
                                                    <Grid Padding="12,14">
                                                        <Grid.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=SelectStartNumberOptionCommand}"
                                                                                  CommandParameter="{Binding .}" />
                                                        </Grid.GestureRecognizers>
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup Name="CommonStates">
                                                                <VisualState Name="Normal">
                                                                    <VisualState.Setters>
                                                                        <Setter Property="BackgroundColor" Value="Transparent" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                                <VisualState Name="PointerOver">
                                                                    <VisualState.Setters>
                                                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                                <VisualState Name="Pressed">
                                                                    <VisualState.Setters>
                                                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                        <Label Text="{Binding .}"
                                                               FontSize="14"
                                                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                                               VerticalOptions="Center" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Frame>
                            </StackLayout>
                            
                            <Label Grid.Column="1" Grid.Row="0"
                                   Text="{localization:Localize Common_To}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   Margin="{OnIdiom Phone='0', Tablet='10,0', Desktop='15,0'}"
                                   IsVisible="{OnIdiom Phone=False, Tablet=True, Desktop=True}" />

                            <!-- End Number Selector -->
                            <ContentView Grid.Column="{OnIdiom Phone=0, Tablet=2, Desktop=2}" 
                                         Grid.Row="{OnIdiom Phone=2, Tablet=0, Desktop=0}">
                                <ContentView.Content>
                                    <!-- Use Picker on mobile platforms -->
                                    <Picker x:Name="EndPicker"
                                            ItemsSource="{Binding NumberOptions}"
                                            SelectedIndex="{Binding SelectedEndIndex}"
                                            Title="{localization:Localize MainPage_EndNumber}"
                                            HorizontalOptions="FillAndExpand"
                                            IsVisible="{OnPlatform Android=True, iOS=True, Default=False}"
                                            AutomationProperties.Name="{localization:Localize Accessibility_EndNumberPicker}"
                                            AutomationProperties.HelpText="{localization:Localize Accessibility_EndNumberPickerHelp}" />
                                </ContentView.Content>
                            </ContentView>
                            
                            <!-- Desktop alternative for End Number -->
                            <StackLayout Grid.Column="{OnIdiom Phone=0, Tablet=2, Desktop=2}" 
                                         Grid.Row="{OnIdiom Phone=2, Tablet=0, Desktop=0}"
                                         IsVisible="{OnPlatform WinUI=True, MacCatalyst=True, Default=False}"
                                         HorizontalOptions="FillAndExpand">
                                <Label Text="{localization:Localize MainPage_EndNumber}"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSubtle}, Dark={StaticResource Gray400}}"
                                       Margin="0,0,0,5" />
                                <Grid>
                                    <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                                            StrokeThickness="1"
                                            HeightRequest="{OnIdiom Phone=48, Tablet=52, Desktop=56}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="4" />
                                        </Border.StrokeShape>
                                        <Grid>
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding ToggleEndDropdownCommand}" />
                                            </Grid.GestureRecognizers>
                                            <Label Text="{Binding CustomRangeEnd}"
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Start"
                                                   Margin="10,0,0,0" />
                                            <Label Text="{Binding IsEndDropdownVisible, Converter={StaticResource BoolToDropdownArrowConverter}}"
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light={StaticResource TextSubtle}, Dark={StaticResource Gray400}}"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="End"
                                                   Margin="0,0,10,0" />
                                        </Grid>
                                    </Border>
                                </Grid>
                                <!-- Dropdown for End Number -->
                                <Frame IsVisible="{Binding IsEndDropdownVisible}"
                                       BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}"
                                       BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                                       CornerRadius="8"
                                       Padding="0"
                                       HasShadow="True"
                                       ZIndex="1000"
                                       MaximumHeightRequest="200">
                                    <CollectionView ItemsSource="{Binding NumberOptions}"
                                                    BackgroundColor="Transparent"
                                                    SelectionMode="None"
                                                    MaximumHeightRequest="180">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="x:String">
                                                <Border BackgroundColor="Transparent"
                                                        Padding="0">
                                                    <Grid Padding="12,14">
                                                        <Grid.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=SelectEndNumberOptionCommand}"
                                                                                  CommandParameter="{Binding .}" />
                                                        </Grid.GestureRecognizers>
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup Name="CommonStates">
                                                                <VisualState Name="Normal">
                                                                    <VisualState.Setters>
                                                                        <Setter Property="BackgroundColor" Value="Transparent" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                                <VisualState Name="PointerOver">
                                                                    <VisualState.Setters>
                                                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                                <VisualState Name="Pressed">
                                                                    <VisualState.Setters>
                                                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                        <Label Text="{Binding .}"
                                                               FontSize="14"
                                                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                                               VerticalOptions="Center" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Frame>
                            </StackLayout>
                        </Grid>
                        
                        <!-- Validation Message -->
                        <Label Text="{Binding ValidationMessage}"
                               TextColor="Red"
                               FontSize="14"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap"
                               IsVisible="{Binding HasValidationError}"
                               Margin="10,5,10,0" />
                        
                        <Button Text="{localization:Localize MainPage_StartCustomTraining}"
                                Command="{Binding StartCustomTrainingCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="{OnIdiom Phone=60, Tablet=65, Desktop=70}"
                                LineBreakMode="WordWrap"
                                Padding="15,10"
                                AutomationProperties.Name="{localization:Localize Accessibility_StartCustomTrainingButton}"
                                AutomationProperties.HelpText="{localization:Localize Accessibility_StartCustomTrainingButtonHelp}" />
                    </StackLayout>
                </Frame>
            </StackLayout>

            <!-- Right Column: Preset training options (only visible on tablet/desktop) -->
            <StackLayout Grid.Column="1" 
                         Spacing="15"
                         Margin="20,0,0,0"
                         IsVisible="{OnIdiom Phone=False, Tablet=True, Desktop=True}">
                
                <Label Text="{localization:Localize MainPage_PresetTraining}" 
                       Style="{StaticResource SubHeadline}"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />

                <!-- CollectionView with adaptive layout -->
                <CollectionView ItemsSource="{Binding TrainingOptions}"
                                SelectionMode="None">
                    
                    <CollectionView.ItemsLayout>
                        <!-- Responsive ItemsLayout: 
                             Single column on phone, multiple columns on larger screens -->
                        <LinearItemsLayout Orientation="Vertical" 
                                         ItemSpacing="10" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray800}}"
                                   Padding="15"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   Margin="0,5">
                                
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=StartPresetTrainingCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>

                                <StackLayout Spacing="5">
                                    <Label Text="{Binding Name}" 
                                           FontAttributes="Bold"
                                           FontSize="{OnIdiom Phone=16, Tablet=18, Desktop=20}" />
                                    
                                    <Label Text="{Binding Description}" 
                                           FontSize="{OnIdiom Phone=12, Tablet=14, Desktop=16}"
                                           TextColor="{AppThemeBinding Light={StaticResource TextSubtle}, Dark={StaticResource Gray400}}"
                                           LineBreakMode="WordWrap" />
                                    
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                        <Label Text="{localization:Localize Common_Range}" 
                                               FontSize="{OnIdiom Phone=11, Tablet=13, Desktop=15}"
                                               FontAttributes="Italic"
                                               TextColor="{StaticResource Primary}" />
                                        <Label Text="{Binding RangeStart}" 
                                               FontSize="{OnIdiom Phone=11, Tablet=13, Desktop=15}"
                                               FontAttributes="Italic"
                                               TextColor="{StaticResource Primary}" />
                                        <Label Text=" {localization:Localize Common_To} " 
                                               FontSize="{OnIdiom Phone=11, Tablet=13, Desktop=15}"
                                               FontAttributes="Italic"
                                               TextColor="{StaticResource Primary}" />
                                        <Label Text="{Binding RangeEnd}" 
                                               FontSize="{OnIdiom Phone=11, Tablet=13, Desktop=15}"
                                               FontAttributes="Italic"
                                               TextColor="{StaticResource Primary}" />
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
